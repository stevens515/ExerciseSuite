<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<package name="projectDemo" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="checklogin"
				class="com.tarena.interceptor.LoginInterceptor" />
		</interceptors>


		<global-results>
			<result name="error">
				<param name="location">
					/WEB-INF/error.jsp
				</param>
			</result>
			<result name="login">
				/WEB-INF/login.jsp
			</result>
		</global-results>

		<!-- 列表显示示例 -->
		<action name="list" class="com.tarena.action.ProjectListAction">
			<result name="success">
				/WEB-INF/project_list.jsp
			</result>
		</action>
		<!-- 进入add.jsp -->
		<action name="toAdd">
			<result>/WEB-INF/add.jsp</result>
		</action>
		<!-- 添加,删除,查看,更新处理 -->
		<action name="project" class="com.tarena.action.ProjectAction">
			<interceptor-ref name="checklogin" />
			<interceptor-ref name="defaultStack" />
			<result name="success" type="redirectAction">
				list
			</result>
			<result name="view">
				/WEB-INF/view.jsp
			</result>
			<result name="update">
				/WEB-INF/update.jsp
			</result>
		</action>

		<action name="login" class="com.tarena.action.LoginAction">
			<result name="success" type="redirectAction">
				list
			</result>
		</action>


	</package>
</struts>