<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<package name="cart" namespace="/cart" 
			extends="dang-default">
			
			
			<interceptors>
				<interceptor name="checkuser" class="com.tarena.interceptor.CheckUserLoginInterceptor"></interceptor>
				<interceptor-stack name="cartStack">
					<interceptor-ref name="checkuser"></interceptor-ref>
					<interceptor-ref name="defaultStack"></interceptor-ref>
				</interceptor-stack>
			</interceptors>
			
			<action name="cartAction" method="add" class="com.tarena.action.cart.CartAction">
				<result name="success" type="json">
					<param name="root">ok</param>
				</result>
			</action>
			
			<action name="cartAction" method="delete" class="com.tarena.action.cart.CartAction">
				<result name="success" >../cart/cart_list.jsp</result>
			</action>
			<action name="showCart" method="showCart" class="com.tarena.action.cart.CartAction">
				<result name="success" >../cart/cart_list.jsp</result>
			</action>
			<action name="cartAction" method="update" class="com.tarena.action.cart.CartAction">
				<result name="success" >../cart/cart_list.jsp</result>
			</action>
			<action name="cartAction" method="recovery" class="com.tarena.action.cart.CartAction">
				<result name="success" >../cart/cart_list.jsp</result>
			</action>
			<action name="showOrderInfo"  method="showOrderInfo" class= "com.tarena.action.cart.CartAction">
				<interceptor-ref name="cartStack"></interceptor-ref>
				<result name="login">../user/login_form.jsp</result>
				<result name="cart">../cart/cart_list.jsp</result>
				<result name="success">../order/order_info.jsp</result>
			</action>
			
			
	</package>
</struts>

