<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- 用户模块 -->
	<package name="user" namespace="/user" 
			extends="dang-default">
		<action name="register"
				class="com.tarena.action.user.RegisterAction">
				<result name="success">../user/verify_form.jsp</result>
		</action>
		<action name="vailEmail" 
				class="com.tarena.action.user.VaildEmailAction">
				<result name="success" type="json">
					<param name="root">ok</param>
				</result>
  	</action>
  	  
  	<action name="getCodeImage" class="com.tarena.action.user.GetCodeImage">
  				<result name="success" type="stream" >
  							<param name="inputName">imageStream</param>
  				</result>
  	</action>
  	
  		<action name="checkCodeImage" class="com.tarena.action.user.CheckCodeImage">
  						<result name="success" type="json">
  										<param name="root">ok</param>
  						</result>
  		</action>
  		<action name="verifyEmail" class="com.tarena.action.user.VerifyEmailAction">
  							<result name="success">../user/register_ok.jsp	</result>
  							<result name="fail">../user/verify_form.jsp</result>
  		</action>
  		
  		
  			<action  name="login" class="com.tarena.action.user.LoginAction">
  								<result name="login">../user/login_form.jsp</result>
  								<result name="verify">../user/verify_form.jsp</result>
  									<result name="cart">../cart/cart_list.jsp</result>
  							  <result name="main" type="redirect"> /main/main.jsp</result>
  			</action>

  			<action name="exit" class="com.tarena.action.user.ExitAction">
  								<result name="success">../main/main.jsp</result>
  			</action>
	</package>
</struts>

