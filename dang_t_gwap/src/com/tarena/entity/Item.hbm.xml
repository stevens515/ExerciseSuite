<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.tarena.entity.Item" table="d_item">
		<id column="id" name="id" type="java.lang.Integer">
			<!-- generator用来指明主键的生成方式 -->
			<generator class="native" />
		</id>
		<property column="order_id" name="orderId" type="integer" />
		<property name="productId" column="product_id" type="integer" />
		<property name="productName" column="product_name" type="string" />
		<property name="dangPrice" column="dang_price" type="double" />
		<property name="productNum" column="product_num" type="integer" />
		<property name="amount" column="amount" type="double" />
	</class>
</hibernate-mapping>
