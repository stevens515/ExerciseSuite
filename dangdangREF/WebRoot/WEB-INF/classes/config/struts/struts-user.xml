<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<package name="dang-user" extends="dang-default" namespace="/user">
		<action name="userAction" class="com.tarena.web.action.UserAction">
			<result name="register_form" type="dispatcher">
				/WEB-INF/jsp/user/register_form.jsp
		 </result>
			<result name="verify_form" type="dispatcher">
				/WEB-INF/jsp/user/verify_form.jsp
		 </result>
			<result name="register_ok" type="dispatcher">
				/WEB-INF/jsp/user/register_ok.jsp
		 </result>
			<result name="login_form" type="dispatcher">
				/WEB-INF/jsp/user/login_form.jsp
	  	</result>
			<result name="show" type="redirectAction">
				../
		</result>
		</action>
	</package>
</struts>
