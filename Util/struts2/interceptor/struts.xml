<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<include file="struts-user.xml"></include>
	<include file="struts-main.xml"></include>
	<include file="struts-cart.xml"></include>
	<include file="struts-order.xml"></include>
	<package name="dang-default" extends="json-default">
	<!-- 拦截器 -->
		<interceptors>
			<interceptor name="transaction" class="com.wangxin.interceptor.TransInterceptor"/>
				<interceptor-stack name="dangStack">
					<interceptor-ref name="transaction"/>
					<interceptor-ref name="defaultStack"/>
				</interceptor-stack>
		</interceptors>
		<!-- 默认执行的拦截器 -->
		<default-interceptor-ref name="dangStack"/>
		<!-- 指定默认的响应处理的ation -->
		<default-action-ref name="index"/>
		<!-- 全局执行的result -->
		<global-results >
			<result name="fail">/error.jsp</result>
		</global-results>
		<action name="index">
			<result name="success" type="redirect">/main/main.jsp</result>
		</action>
		<!-- 验证码图片 -->
		<action name="imageCode" class="com.wangxin.action.ImageAction">
			<result name="success" type="stream">
				<param name="inputName">imageStream</param>
			</result>
		</action>
		<!--检查 验证码图片是否正确 -->
		<action name="imageValidate" class="com.wangxin.action.ImageValidateAction">
			<result name="success" type="json">
				<param name="root">ok</param>
			</result>
		</action>
	</package>
</struts>