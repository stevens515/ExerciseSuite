<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
<package name="wangxin" extends="struts-default">
	<action name="*_user" method="{1}" class="control.UserAction">
		<result name="success">/WEB-INF/jsp/{1}user.jsp</result>
		
	</action>
	</package>
	<package name="iamge" extends="json-default">
		<action name="imageCode" class="control.ImageAction">
			<result name="success" type="stream">
				<param name="inputName">imageStream</param>
			</result>
		</action>
		<action name="imagevalidate" class="control.ImageValidateAction">
			<result name="success" type="json"></result>
		</action>
	</package>
</struts>